@model List<ResultProductDto>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/UILayout/Layout.cshtml";
}
@await Component.InvokeAsync("_HomeHeaderComponent")
@*
@await Html.PartialAsync("~/View/home/partialsearch.cshtml")*@ 
@await Component.InvokeAsync("_HomeBannerComponent") 

<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Produits en Stock</h3>
            </div>
            <div class="row">
               @foreach (var item in Model) {
                    <br />
                    <div class="col-lg-4 col-md-6 mb-3 listing-img">
                        <a asp-action="ProductSingle" asp-controller="ProductHome" asp-route-id="@item.Id">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@item.Quantity</span><span>en Stock</span></div>
                                <img class="img-fluid" style="height:200px; width:700px" src="~/shoptemplate/assets/images/p1.jpg" alt="">
                                <div class="box-content">
                                    <h3 class="title">@item.Name</h3>
                                </div>
                            </div>
                        </a>
                        <div class="listing-details blog-details align-self">
                            <h4 class="user_title agent">
                                <a href="#url">@item.Name</a>
                            </h4>
                            <p class="user_position"> @item.ShortDescription </p>
                            <ul class="mt-3 estate-info">
                                <li><span class="fa fa-bed"></span> 1 Bed</li>
                                <li><span class="fa fa-shower"></span> 2 Baths</li>
                                <li><span class="fa fa-share-square-o"></span> 1760 Sqft</li>
                            </ul>
                        </div>
                    </div> 
                    <br />
                }  
                
            </div>
        </div>
    </div>
</section>
@await Component.InvokeAsync("_HomeSupplierComponent")
 




