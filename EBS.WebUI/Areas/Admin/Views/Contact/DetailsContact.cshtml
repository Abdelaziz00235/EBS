@model ResultContactDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Contact</li>
            <li class="breadcrumb-item active"><a asp-action="Index">@ViewData["Title"]</a></li>
        </ol>
    </nav>
</div>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Information General</h5>
                     <form>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Map): </label>
                          <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Map)" disabled>
                          </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Adress): </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Adress)" disabled>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Phone): </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Phone)" disabled>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Email): </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Email)" disabled>
                            </div>
                        </div>

                        <div class="row mb-3">
                            @if (Model.IsActived == true)
                            {
                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Status: <span class="badge bg-success"> Activer</span></label>
                            }
                            else
                            {
                                <label class="form-check-label" for="flexSwitchCheckDisabled">Status: <span class="badge bg-danger">N'est pas activer</span></label>
                            }
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Modiffier", "UpdateAbout", new { id = Model.Id }) | <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Google Maps</h5>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-6 mt-6">
                                <img src="@Html.DisplayFor(model => model.MapUrl)" class="container-fluid" style="width:80px;height:80px" />
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
