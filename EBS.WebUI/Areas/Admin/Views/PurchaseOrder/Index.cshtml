@* @model IEnumerable<EBS.WebUI.DTOs.PurchaseOrderDtos.ResultPurchaseOrderDto> *@
@model List<ResultPurchaseOrderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="CreatePurchaseOrder">Create New</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Prix</th>
                                <th>Quantite</th>
                                <th>Taille/Volume</th>
                                <th>colorOfProduct</th>
                                <th>Fournisseur</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SizeOfProduct)</td>
                                    <td>@Html.DisplayFor(modelItem => item.colorOfProduct)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Supplier.FullName)</td>
                                        @if (item.IsActived == true)
                                        {
                                            <td class="green"><span class="badge bg-success">Activer</span></td>
                                        }
                                        else
                                        {
                                            <td class="green"><span class="badge bg-danger">Non activer</span></td>
                                        }
                                    <td>
                                        <a asp-action="UpdatePurchaseOrder" asp-controller="PurchaseOrder" asp-area="Admin" asp-route-id="@item.Id">Edite</a>
                                        <a asp-action="Details" asp-controller="PurchaseOrder" asp-area="Admin" asp-route-id="@item.Id">Detail</a>
                                        <a asp-action="DeletePurchaseOrder" asp-controller="PurchaseOrder" asp-area="Admin" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>

