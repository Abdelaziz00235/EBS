@model List<ResultWitshListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Produit</th>
                                <th>Employee</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.product.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.employee.FullName)</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green"><span class="badge bg-success">Activer</span></td>
                                    }
                                    else
                                    {
                                        <td class="green"><span class="badge bg-danger">Non activer</span></td>
                                    }
                                    <td>
                                        <a asp-action="UpdateAbout" asp-controller="About" asp-area="Admin" asp-route-id="@item.Id">Edite</a>
                                        <a asp-action="Details" asp-controller="About" asp-area="Admin" asp-route-id="@item.Id">Detail</a>
                                        <a asp-action="DeleteAbout" asp-controller="About" asp-area="Admin" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>

