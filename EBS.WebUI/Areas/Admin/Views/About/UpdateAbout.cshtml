@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">About</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] </h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateAbout" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                    @* Info Images *@
                    <div class="card card-default">
                        <div class="card-header">
                            <h5 class="card-title">Images </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="ImageUrl1" class="control-label"></label>
                                    <input type="file" asp-for="PictureImage1" class="form-control" data-mask />
                                </div>
                                <div class="col-6">
                                    <label asp-for="ImageUrl2" class="control-label"></label>
                                    <input type="file" asp-for="PictureImage2" class="form-control" data-mask />
                                </div>
                            </div>
                        </div>
                    </div>
                    @* Info Images *@
                    <div class="card card-default">
                        <div class="card-header">
                            <h5 class="card-title">Images </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="Item1" class="control-label"></label>
                                    <input asp-for="Item1" class="form-control" />
                                    <span asp-validation-for="Item1" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <label asp-for="Item2" class="control-label"></label>
                                    <input asp-for="Item2" class="form-control" />
                                    <span asp-validation-for="Item2" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <label asp-for="Item3" class="control-label"></label>
                                    <input asp-for="Item3" class="form-control" />
                                    <span asp-validation-for="Item3" class="text-danger"></span>
                                </div>
                                <div class="col-3">
                                    <label asp-for="Item4" class="control-label"></label>
                                    <input asp-for="Item4" class="form-control" />
                                    <span asp-validation-for="Item4" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    @* Info Description *@
                    <div class="card card-default">
                        <div class="card-header">
                            <h5 class="card-title">Description </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <textarea asp-for="description" placeholder="Description de l'agence maximum 1024 caractere..." rows="4" cols="150" class="container-fluid"></textarea>
                                    <span asp-validation-for="description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-default">
                        <div class="card-header">
                            <div class="card-title">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input asp-for="IsActived" type="checkbox" class="custom-control-input" id="customSwitch3">
                                    <label class="custom-control-label" for="customSwitch3">@Html.DisplayNameFor(model => model.IsActived)</label>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="d-grid gap-2 mt-3">
                                    <input type="submit" value="Enregistrer" class="btn btn-outline-primary" /> <br />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer"> <a asp-action="Index">Liste</a></div>
                    </div>
                </form>
            </div>
            <div class="card-footer"></div>
        </div><!--./card card-default -->
    </div><!--./container-fluid -->
</section>

