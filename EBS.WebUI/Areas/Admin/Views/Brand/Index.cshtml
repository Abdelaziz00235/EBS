 @* @model IEnumerable<EBS.WebUI.DTOs.BrandDtos.ResultBrandDto>  *@
 @model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p><a asp-action="Create">Create New</a></p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th> 
                                <th>Status</th> 
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green">
                                            <span class="badge bg-success">Activer</span>
                                            <a asp-action="BrandChangeStautsIsFalse" asp-controller="Brand" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">Desactiver</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="green">
                                            <span class="badge bg-danger">Non activer</span>
                                            <a asp-action="BrandChangeStautsIsTrue" asp-controller="Brand" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-success">Activer</a>
                                        </td>
                                    }
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                        @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>
