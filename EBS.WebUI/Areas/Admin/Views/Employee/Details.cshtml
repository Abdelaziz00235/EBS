@model ResultEmployeeDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Employee</li>
            <li class="breadcrumb-item active"><a asp-action="Index">@ViewData["Title"]</a></li>
        </ol>
    </nav>
</div>
<hr />


<section class="section">
    <div class="row">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Information General</h5>
                    <form>
                        <div class="row">
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.FullName):</label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.FullName)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.UserName):</label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.UserName)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.PhoneNumber): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.PhoneNumber)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.Email): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Email)" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.NNI): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.NNI)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.Matricule): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Matricule)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.Designation): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Designation)" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">Agence: </label>
                                <input type="text" class="form-control" value="@ViewBag.AgenceSelectName" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">Departement: </label>
                                <input type="text" class="form-control" value="@ViewBag.DepartmentSelectName" disabled>
                            </div> 
                        </div>
                          
                        <br />
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                @* <input type="text" class="form-control" value="@(Model.IsActived==true? "Commande Effecture":"Commande non effecture")" disabled> *@
                                @if (Model.IsActived == true)
                                {
                                    <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Status: <span class="badge bg-success">Compte est Activer</span></label>
                                }
                                else
                                {
                                    <label class="form-check-label" for="flexSwitchCheckDisabled">Status: <span class="badge bg-danger">Compte est non activer</span></label>
                                }
                            </div>

                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Modiffier", "UpdateEmployee", new { id = Model.Id }) | <a asp-action="Index">Liste des employees</a>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Photos</h5>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-6 mt-6">

                                <img src="~/AdminTemplate/assets/EmployeesPicture/@Model.ImageUrl" style="width:150px;height:150px" />
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

