@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Employee</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />

<p><a asp-action="CreateEmployee">Nouveau Employee</a></p>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>FullName</th> 
                                <th>Designation</th> 
                                <th>Agence</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr data-index="0"> 
                                    <td>@item.Id</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Designation</td> 
                                    <td>@item.agence.Name</td>
                                    <td>@item.Department.Name</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green"><span class="badge bg-success">Activer</span></td>
                                    }
                                    else
                                    {
                                        <td class="green"><span class="badge bg-danger">Non activer</span></td>
                                    } 
                                    <td>
                                        <a asp-action="UpdateEmployee" asp-controller="Employee" asp-area="Admin" asp-route-id="@item.Id">Edite</a>
                                        <a asp-action="Details" asp-controller="Employee" asp-area="Admin" asp-route-id="@item.Id">Detail</a>
                                        <a asp-action="DeleteEmployee" asp-controller="Employee" asp-area="Admin" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>
