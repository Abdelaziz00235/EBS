@model List<ResultRequestPurchaseOrExecutionWorkDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Basket</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />

<p><a asp-action="CreateRequestPurchaseOrExecutionWork">Create New</a></p>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nature</th>
                                <th>Maintenance</th>
                                <th>GeneralService</th>
                                <th>BudgetLine</th>
                                <th>Supplier</th>
                                <th>Status</th>
                                <th>Modiffier</th>
                                <th>Detail</th>
                                <th>Supprimer</th>
                                <th>Export</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nature)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Maintenance)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GeneralService)</td>
                                    <td>@Html.DisplayFor(modelItem => item.BudgetLine)</td>
                                    <td>@Html.DisplayFor(modelItem => item.supplier.FullName)</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green"><span class="badge bg-success">Activer</span></td>
                                    }
                                    else
                                    {
                                        <td class="green"><span class="badge bg-danger">Non activer</span></td>
                                    }
                                    <td><a asp-action="UpdateRequestPurchaseOrExecutionWork" asp-controller="RequestPurchaseOrExecutionWork" asp-area="Admin" asp-route-id="@item.Id">Edite</a></td>
                                    <td><a asp-action="DetailsRequestPurchaseOrExecutionWork" asp-controller="RequestPurchaseOrExecutionWork" asp-area="Admin" asp-route-id="@item.Id">Detail</a></td>
                                    <td> <a asp-action="DeleteRequestPurchaseOrExecutionWork" asp-controller="RequestPurchaseOrExecutionWork" asp-area="Admin" asp-route-id="@item.Id">Delete</a></td>
                                    <td> <a asp-action="ExportPdfRequestPurchaseOrExecutionWork" asp-controller="RequestPurchaseOrExecutionWork" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">PDF</a> </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>


