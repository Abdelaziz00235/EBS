@model UpdateSubCategoryDto
@{
    ViewData["Title"] = "Mise a jour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Sous Categorie</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />

<section class="content">
    <div class="container-fluid">

        <br />
        <form asp-action="UpdateSubCategorie" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Info Sous Categorie *@
            <div class="card card-default">
                <div class="card-header">
                    <h5 class="card-title">Info Personnel </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        CategoryId

                        <div class="col-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="col-3">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-items="@ViewBag.CategorieSelectItem" asp-for="CategoryId" class="form-control">
                                <option>Categorie</option>
                            </select>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card card-default">
                <div class="card-header">
                    <div class="card-title">
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input asp-for="IsActived" type="checkbox" class="custom-control-input" id="customSwitch3">
                            <label class="custom-control-label" for="customSwitch3">@Html.DisplayNameFor(model => model.IsActived)</label>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="d-grid gap-2 mt-3">
                            <input type="submit" value="Enregistrer" class="btn btn-outline-primary" /> <br />
                        </div>
                    </div>
                </div>
                <div class="card-footer"> <a asp-action="Index">Liste de sous categories</a></div>
            </div>
        </form>
    </div><!--./container-fluid -->
</section>


