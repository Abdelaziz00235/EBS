@* @model IEnumerable<EBS.WebUI.DTOs.DepartmentDtos.ResultDepartmentDto> *@

@model List<ResultDepartmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateDepartment">Create New</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green"><span class="badge bg-success">Activer</span></td>
                                    }
                                    else
                                    {
                                        <td class="green"><span class="badge bg-danger">Non activer</span></td>
                                    }
                                    <td> 
                                        <a asp-action="UpdateDepartment" asp-controller="Department" asp-area="Admin" asp-route-id="@item.Id">Modiffier</a> |
                                        <a asp-action="DetailsDepartment" asp-controller="Department" asp-area="Admin" asp-route-id="@item.Id">Detail</a> |
                                        <a asp-action="DeleteDepartment" asp-controller="Department" asp-area="Admin" asp-route-id="@item.Id">Supprimer</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>


