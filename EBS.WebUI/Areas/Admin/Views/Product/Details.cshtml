@model ResultProductDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">About</li>
            <li class="breadcrumb-item active"><a asp-action="Index">@ViewData["Title"]</a></li> 
        </ol>
    </nav>
</div>
<hr />

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Information General</h5>
                    <form>

                        <div class="row">
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.Name):</label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Name)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.Quantity):</label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Quantity)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.colorOfProduct): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.colorOfProduct)" disabled>
                            </div> 
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.MaxThreshold): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MaxThreshold)" disabled>
                            </div> 
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">@Html.DisplayNameFor(model => model.MinThreshold): </label>
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.MinThreshold)" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">Marque du produit: </label>
                                <input type="text" class="form-control" value="@ViewBag.BrandSelectItem" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">Ref. Bon de Commande: </label>
                                <input type="text" class="form-control" value="@ViewBag.purchaseOrderSelectItem" disabled>
                            </div>
                            <div class="col-3">
                                <label for="inputText" class="col-form-label">Categorie: </label>
                                <input type="text" class="form-control" value="@ViewBag.SubCategorySelectItem" disabled>
                            </div>
                        </div>
                          
                        <div class="row mb-3">
                            <div class="col-lg-12">
                                <div class="card"> 
                                    <div class="card-body">
                                        <h5 class="card-title">Court description</h5>
                                        <p class="form-control" disabled>@Html.DisplayFor(model => model.ShortDescription)</p> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Longue description</h5>
                                        <p class="form-control" disabled>@Html.DisplayFor(model => model.LongDescription)</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br />
                        <div class="row mb-3">
                            <div class="col-sm-12"> 
                                @* <input type="text" class="form-control" value="@(Model.IsActived==true? "Commande Effecture":"Commande non effecture")" disabled> *@
                                @if (Model.IsActived == true)
                                {
                                    <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Status: <span class="badge bg-success"> Activer</span></label>
                                }
                                else
                                {
                                    <label class="form-check-label" for="flexSwitchCheckDisabled">Status: <span class="badge bg-danger">N'est pas activer</span></label>
                                } 
                            </div>
                            <div class="col-sm-12"> 
                                @if (Model.Review == true)
                                {
                                    <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Review: <span class="badge bg-success"> En revue</span></label>
                                }
                                else
                                {
                                    <label class="form-check-label" for="flexSwitchCheckDisabled">Review: <span class="badge bg-danger">N'est pas en revue</span></label>
                                }
                            </div>

                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Modiffier", "UpdateBasket", new { id = Model.Id }) | <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Photos</h5>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-6 mt-6">
                                <span>Produit</span>
                                <img src="~/AdminTemplate/assets/img/@Html.DisplayFor(model => model.ImageUrl)" class="container-fluid" style="width:80px;height:80px" />
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

