@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                 
                                <th>Name</th>
                                <th>Icon</th>
                                <th>Description</th>
                                <th>IsActived</th>
                                <th>ACTIONS</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr> 
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td> <img src="~/admintemplate/assets/categoriesicon/@item.Icon" style="width:75px;height:75px" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                 
                                @if (item.IsActived == true)
                                {
                                    <td class="green">
                                        <span class="badge bg-success">Activer</span>
                                        <a asp-action="ProductChangeStautsIsFalse" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">Desactiver</a>
                                    </td>
                                }
                                else
                                {
                                    <td class="green">
                                        <span class="badge bg-danger">Non activer</span>
                                            <a asp-action="ProductChangeStautsIsTrue" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-success">Activer</a>
                                    </td>
                                }
                                    <td> <a asp-action="Edit" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-primary">Edite</a> </td>
                                    <td>  <a asp-action="Details" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a> </td>
                                    <td>  <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a> </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>




