@model UpdateMessageDto;
@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateMessage</h1>
 
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Message</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] </h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateMessage">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                    <div class="row">
                        <div class="col-12">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label asp-for="Subjet" class="control-label"></label>
                            <input asp-for="Subjet" class="form-control" />
                            <span asp-validation-for="Subjet" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-12"> 
                            <textarea asp-for="Content" rows="4" cols="150" class="container-fluid"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div
                     
                    <div class="row">
                        <div class="col-6 mt-2">
                            <input type="submit" value="ENREGISTRE" class="btn btn-primary" /> <br />
                        </div>
                        <div class="col-10">
                            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                <input asp-for="IsActived" type="checkbox" class="custom-control-input" id="customSwitch3">
                                <label class="custom-control-label" for="customSwitch3">@Html.DisplayNameFor(model => model.IsActived)</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer"> <a asp-action="Index">Liste des messages</a></div>
        </div><!--./card card-default -->
    </div><!--./container-fluid -->
</section>


