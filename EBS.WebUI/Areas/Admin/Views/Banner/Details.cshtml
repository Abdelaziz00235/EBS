@model EBS.WebUI.DTOs.BannerDtos.ResultBannerDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">About</li>
            <li class="breadcrumb-item active"><a asp-action="Index">@ViewData["Title"]</a></li>
        </ol>
    </nav>
</div>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Information General</h5>
                    <form>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">ID: </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Id)" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Titre: </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Title)" disabled>
                            </div>
                        </div>  
                        <div class="row mb-3">
                            @if (Model.IsActived == true)
                            {
                                <label class="form-check-label" for="flexSwitchCheckCheckedDisabled">Status: <span class="badge bg-success"> Activer</span></label>
                            }
                            else
                            {
                                <label class="form-check-label" for="flexSwitchCheckDisabled">Status: <span class="badge bg-danger">N'est pas activer</span></label>
                            }
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Modiffier", "Edit", new { id = Model.Id }) | <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Photos</h5>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-12 mt-6">
                                <img src="~/AdminTemplate/assets/img/@Model.ImageUrl" class="container-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>