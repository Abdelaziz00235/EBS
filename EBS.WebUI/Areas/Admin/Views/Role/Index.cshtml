
@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Roles</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />
<p><a asp-action="CreateRole">Create New</a></p>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th> 
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-index="0">
                                    <td scope="row">@item.Id </td> 
                                    <td>@item.Name</td> 
                                    <td> 
                                        <a asp-action="UpdateRole" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id">Modiffier</a> |
                                        <a asp-action="DetailsRole" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id">Detail</a> |
                                        <a asp-action="DeleteRole" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id">Supprimer</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>


