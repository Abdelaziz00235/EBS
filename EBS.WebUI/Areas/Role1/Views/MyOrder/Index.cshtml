@model List<ResultOrderDto>
@{
    ViewData["Title"] = "Mes Produits Commander";
    Layout = "~/Areas/Role1/Views/Role1Layout/Index.cshtml";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item ">Mes commandes</li>
            <li class="breadcrumb-item active"><a asp-action="Index">Index</a></li>
        </ol>
    </nav>
</div>
<hr />

<p><a asp-action="CreateMyOrder">Create New</a></p>
 
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Quantity</th> 
                                <th>Produits</th>
                                <th>Employee</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td> 
                                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Employee.FullName)</td>
                                    @if (item.IsActived == true)
                                    {
                                        <td class="green"><span class="badge bg-success">Encour de livraison</span></td>
                                    }
                                    else
                                    {
                                        <td class="green"><span class="badge bg-danger">Encour...</span></td>
                                    }
                                    <td>
                                        <a asp-action="UpdateMyOrder" asp-controller="MyOrder" asp-area="Role1" asp-route-id="@item.Id">Modiffier</a>|
                                        <a asp-action="DetailsMyOrder" asp-controller="MyOrder" asp-area="Role1" asp-route-id="@item.Id">Voire plus</a>|
                                        <a asp-action="DeleteMyOrder" asp-controller="MyOrder" asp-area="Role1" asp-route-id="@item.Id">Annuler</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


